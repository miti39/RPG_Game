public class Goblin extends Postac{
    private int hp;
    private int obrona;
    private int obrazenia;

    public Goblin() {
        this.hp = 45;
        this.obrazenia = 15;
        this.obrona = 2;
    }


    //Gettery
    @Override
    public int getHp() {
        return this.hp;
    }
    @Override
    public int getObrona() {
        return this.obrona;
    }
    @Override
    public int getObrazenia() {
        return obrazenia;
    }

    //Settery
    @Override
    public void setHp(int hp) {
        if (hp < 0) {
            this.hp = 0;
        } else {
            this.hp = hp;
        }
    }
}
