import java.util.Scanner;

public abstract class Postac implements Mikstura{

    private int hp = 100;
    private int obrona = 5;
    private int obrazenia = 25;
    private int licznik = 0;
    private String name;

//    public Postac(){
//        System.out.print("Jak się nazywasz? - ");
//        Scanner sc = new Scanner(System.in);
//        this.name = sc.nextLine();
//    }

    //Gettery
    public String getName(){
        return this.name;
    }

    public int getHp() {
        return hp;
    }

    public int getObrazenia() {
        return obrazenia;
    }
    public int getObrona() {
        return obrona;
    }

    //Settery
    public void setHp(int hp) {
        if (hp < 0) {
            this.hp = 0;
        } else {
            this.hp = hp;
        }
    }

    public void setName(){
        System.out.print("Jak się nazywasz? - ");
        Scanner sc = new Scanner(System.in);
        this.name = sc.nextLine();
    }

    //Methody
    public void podstawowyAtak(Postac odbiorca, Postac atakujacy){
        int hp;

        System.out.println(atakujacy.getName() + " atakuje za " + atakujacy.getObrazenia());

        hp = odbiorca.getHp() + odbiorca.getObrona() - atakujacy.getObrazenia();
        odbiorca.setHp(hp);

        System.out.println(odbiorca.getName() + " oberwał, ma teraz " + odbiorca.getHp());
        System.out.println("\n");
    }

    @Override
    public void plusHp(int mikstura, Postac osoba) {
        if(licznik <= 3){
            licznik++;
            osoba.setHp(osoba.getHp() + mikstura);
        }

    }

    public void superAtakM(Postac odbiorca, Mag atakujacy){}
    public void superAtakW(Postac odbiorca, Wojownik atakujacy){}
}
