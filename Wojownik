public class Wojownik extends Postac{
    private int hp = 120;
    private int obrona = 5;
    private int wkurzenie = 0;


    //Gettery
    @Override
    public int getHp() {
        return this.hp;
    }
    @Override
    public int getObrona() {
        return this.obrona;
    }
    public int getWkurzenie(){
        return wkurzenie;
    }

    //Settery
    @Override
    public void setHp(int hp) {
        if (hp < 0) {
            this.hp = 0;
        } else {
            this.hp = hp;
        }
    }
    public void setWkurzenie(int wkurzenie) {
        if(wkurzenie < 0){
            this.wkurzenie = 0;
        }else{
            this.wkurzenie = wkurzenie;
        }
    }

    //Methody
    public void superAtak(Postac odbiorca, Wojownik atakujacy){
        if(wkurzenie > 2){
            System.out.println("Nie możesz zatakować, jesteś za mało Wkurzony");
        }else{
            setWkurzenie(atakujacy.getWkurzenie() - 2);

            System.out.println(atakujacy.getName() + " atakuje za 60hp");

            odbiorca.setHp(odbiorca.getHp() + odbiorca.getObrona() - 60);

            System.out.println(odbiorca.getName() + " oberwał, ma teraz " + odbiorca.getHp());
            System.out.println("/n");
        }
    }

    @Override
    public void podstawowyAtak(Postac odbiorca, Postac atakujacy){
        int hp;

        System.out.println(atakujacy.getName() + " atakuje za " + atakujacy.getObrazenia());

        hp = odbiorca.getHp() + odbiorca.getObrona() - atakujacy.getObrazenia();
        odbiorca.setHp(hp);

        System.out.println(odbiorca.getName() + " oberwał, ma teraz " + odbiorca.getHp());
        System.out.println("/n");

        wkurzenie += 2;
    }

}
