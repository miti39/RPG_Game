public class Wojownik extends Postac{
    private int hp = 120;
    private int obrona = 5;
    private int wkurzenie = 0;
    
    @Override
    public int getHp() {
        return this.hp;
    }
    @Override
    public int getObrona() {
        return this.obrona;
    }
    

    public void superAtak(Postac odbiorca, Postac atakujacy){
        if(wkurzenie > 2){
            System.out.println("NIe morzesz zatakować twoje Wkurzenie jest zamałe");
        }else{
            wkurzenie -= 2;

            System.out.println(atakujacy.getName() + " atakuje za 50hp");

            odbiorca.setHp(odbiorca.getHp() + odbiorca.getObrona() - 50);

            System.out.println(odbiorca.getName() + " oberwał, ma teraz " + odbiorca.getHp());

        }
    }

    @Override
    public void podstawowyAtak(Postac odbiorca, Postac atakujacy){
        System.out.println(atakujacy.getName() + " atakuje za " + atakujacy.getObrazenia());

        odbiorca.setHp(odbiorca.getHp() + odbiorca.getObrona() - atakujacy.getObrazenia());

        System.out.println(odbiorca.getName() + " oberwał, ma teraz " + odbiorca.getHp());

        wkurzenie += 2;
    }

}
